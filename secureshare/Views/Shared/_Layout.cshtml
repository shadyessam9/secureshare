@using System.Security.Claims
@using Microsoft.AspNetCore.Authentication
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]secureshare</title>

    <title>SecureShare</title>
    <!-- Favicons -->
    <link href="~/img/favicon.png" rel="icon">
    <link href="~/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center my-header">

        <div class="d-flex align-items-center justify-content-between">
            <a class="logo d-flex align-items-center" asp-controller="User" asp-action="Index">
                <img src="~/img/logo.png" alt="">
                <span class="d-none d-lg-block">SecureShare</span>
            </a>
        </div><!-- End Logo -->

 

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">
                <li class="nav-item d-block d-lg-none">
                    <a class="nav-link nav-icon search-bar-toggle " href="#">
                        <i class="bi bi-search"></i>
                    </a>
                </li><!-- End Search Icon-->


                <li class="nav-item dropdown pe-3">


                    @if (User.Identity.IsAuthenticated)
                    {
                    @inject secureshareContext _dbContext

                        // Get the user ID from claims
                        var userIdClaim = User.FindFirstValue(ClaimTypes.NameIdentifier);

                        if (userIdClaim != null && int.TryParse(userIdClaim, out int userId))
                        {
                            // Query the database for the user's details
                            var user = _dbContext.Users.FirstOrDefault(u => u.UserID == userId);

                            if (user != null)
                            {

                                <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                                    <img src="~/img/user.png" alt="Profile" class="rounded-circle">
                                    <span class="d-none d-md-block dropdown-toggle ps-2">@user.Username</span>
                                </a>

                                <!-- End Profile Iamge Icon -->

                        
                            }
                        }
                    }



                    @if (User.Identity.IsAuthenticated)
                    {
                                  @inject secureshareContext _dbContext

                        // Get the user ID from claims
                        var userIdClaim = User.FindFirstValue(ClaimTypes.NameIdentifier);

                        if (userIdClaim != null && int.TryParse(userIdClaim, out int userId))
                        {
                            // Query the database for the user's details
                            var user = _dbContext.Users.FirstOrDefault(u => u.UserID == userId);

                            if (user != null)
                            {
                                // Display the user information
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                                    <li class="dropdown-header">
                                        <!-- Display the username -->
                                        <h6>@user.Username</h6>
                                        <!-- Display the department -->

                                        @{ 
                                            @inject secureshareContext _dbContext ; 
                                            var depts = _dbContext.Departments.ToList();
                                            var branchs = _dbContext.Branches.ToList();
                                        }
                                        <span>@depts.FirstOrDefault(d => d.DepartmentID == user.DepartmentID)?.DepartmentName</span> <br/>
                                        <span>@branchs.FirstOrDefault(b => b.BranchId == user.BranchID)?.BranchName</span>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" asp-controller="Auth" asp-action="Logout" asp-route-returnUrl="/">
                                            <i class="bi bi-box-arrow-right"></i>
                                            <span>Sign Out</span>
                                        </a>
                                    </li>
                                </ul>

                                <!-- End Profile Dropdown Items -->
                            }
                        }
                    }
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->



    <!-- ======= Body ======= -->
    <div class="container my-body">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- End Body -->

    <!-- ======= Footer ======= -->
    <footer class="border-top footer text-muted my-footer"></footer>    
    <!-- End Footer -->


    <!-- Vendor JS Files -->
    <!-- jQuery (required for Bootstrap 5) -->
    <script src="~/vendor/jquery-3.6.0.min.js"></script>

    <!-- Popper.js (required for Bootstrap 5) -->
    <script src="~/vendor/popper.min.js"></script>
    <script src="~/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/chart.js/chart.umd.js"></script>
    <script src="~/vendor/echarts/echarts.min.js"></script>
    <script src="~/vendor/quill/quill.min.js"></script>
    <script src="~/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/js/main.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
